{
  "compilerOptions": {
    "target": "ES6", // Target modern JavaScript
    "module": "ES6", // Use ES modules
    "moduleResolution": "Node", // Resolve modules using Node.js-style resolution
    "allowJs": true,
    "outDir": "./dist", // Redirect output structure to the dist directory
    "rootDir": "./src", // Specify the root directory of input files
    "strict": true, // Enable all strict type-checking options
    "esModuleInterop": true, // Enable interoperability between CommonJS and ES Modules
    "forceConsistentCasingInFileNames": true, // Ensure that file names are case-sensitive
    "skipLibCheck": true, // Skip type checking of declaration files
    "allowSyntheticDefaultImports": true, // Allow default imports from modules with no default export
    "resolveJsonModule": true, // Include modules imported with .json extension
    "declaration": true, // Generate .d.ts files for the library
    "sourceMap": true, // Generate source map files
    "lib": ["ES2020", "DOM"], // Include libraries for both Node.js and browser environments
    "types": ["node", "express"], // Include types for Node.js
    "jsx": "react", // Support JSX for React
    "declarationMap": true, // Generate source maps for declarations,
    "baseUrl": ".", // Set base URL to the root of the project
    "paths": {
      // Add path alias mappings
      "#app": ["./src/app/app"],
      "#routes/*": ["./src/app/routes/*"],
      "#models/*": ["./src/app/models/*"],
      "#controllers/*": ["./src/app/controllers/*"],
      "#services/*": ["./src/app/services/*"],
      "#utilities/*": ["./src/app/utilities/*"],
      "#middleware/*": ["./src/app/middleware/*"],
      "#config/*": ["./src/app/config/*"],
      "#constants": ["./src/app/constants"]
    }
  },
  "include": [
    "src/**/**/*" // Include all TypeScript files in the src directory
  ],
  "exclude": [
    "node_modules", // Exclude the node_modules directory
    "dist" // Exclude the dist directory
  ]
}
